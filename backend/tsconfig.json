{
  "compilerOptions": {
    "target": "ES2021",
    "module": "NodeNext",             // works well with `"type": "module"`
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,          // fixes the express `.use()` typing issue
    "strict": true,
    "skipLibCheck": true,

    "rootDir": "src",
    "outDir": "dist",

    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
